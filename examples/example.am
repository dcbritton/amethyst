

type Matrix
    @data:int**

    new(size:int)
        @data = heap [size] int*
        i:int = 0
        while i != size do
            @data[i] = heap [size] int
            i = i + 1
        end

        return
    end
end

def main():int
    size:int = 4
    a:Matrix = new Matrix(size)

    i:int = 0
    while i != size do
        j:int = 0
        while j != size do
            a.data[i][j] = i + j
            j = j + 1
        end
        i = i + 1 
    end

    return a.data[1][3]
end
